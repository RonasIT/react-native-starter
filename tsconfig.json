{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "target": "ES2015",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "@libs/*": ["libs/*"],
      "@assets/*": ["assets/*"],
      "@tests/*": ["tests/*"],
      "@app/*": ["app/*"],
      "@i18n/*": ["i18n/*"]
    }
  },
  "extends": "expo/tsconfig.base"
}
